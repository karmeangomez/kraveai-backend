# Instagram login credentials (for /api/scrape endpoint)
IG_USERNAME=
IG_PASSWORD=

# OpenAI API Key (for both chat and TTS endpoints)
OPENAI_API_KEY=

# (Optional) OpenAI chat model (default: gpt-3.5-turbo)
OPENAI_CHAT_MODEL=

# Bitly API access token (for link shortening)
BITLY_ACCESS_TOKEN=

# (Optional) Puppeteer Chromium executable path (default: /usr/bin/chromium)
PUPPETEER_EXECUTABLE_PATH=

# Port for the Express server (Render sets this automatically, default 3000)
# PORT=3000
